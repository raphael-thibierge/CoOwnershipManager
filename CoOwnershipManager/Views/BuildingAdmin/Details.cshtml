@model CoOwnershipManager.Data.Building

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Building</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.FullAddressString)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apartments)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var apartment in Model.Apartments)
                {
                    <li>
                        @apartment.Description
                        <ul>@foreach (var resident in apartment.Unhabitants)
                            {
                                <li>@resident.Name</li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </dd>
        <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Posts)
                </dt>
                <dd class="col-sm-10">
                    <ul>
                    @foreach (var post in Model.Posts)
                    {
                        <li>@post.Author.Name at @post.PostedAt.ToShortDateString() : @post.Title</li>
                    }
                    </ul>
                </dd>
    </dl>
</div>
